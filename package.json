{
  "name": "first-plugin",
  "version": "1.0.0",
  "description": "Your Figma Plugin",
  "main": "code.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --watch",
    "lint": "eslint --ext .js --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .js --ignore-pattern node_modules --fix ."
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "^1.116.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.54.0",
    "html-inline-css-webpack-plugin": "^1.11.2",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "style-loader": "^4.0.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "env": {
      "browser": true,
      "es2017": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "globals": {
      "figma": "readonly",
      "__html__": "readonly",
      "__dirname": "readonly",
      "module": "readonly",
      "require": "readonly"
    },
    "root": true,
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
